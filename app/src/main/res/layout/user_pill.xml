<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardUseCompatPadding="true"
            app:cardBackgroundColor="@android:color/darker_gray"
            app:cardCornerRadius="10dp"
            android:foreground="?selectableItemBackground"
    >
        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <TextView
                    android:text="Pill Information"
                    android:layout_width="260dp"
                    android:layout_height="97dp" android:id="@+id/pillInfo"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="5dp"
                    app:layout_constraintTop_toBottomOf="@+id/pillName" app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginBottom="5dp" app:layout_constraintEnd_toStartOf="@+id/dispenseButton"
                    android:layout_marginEnd="5dp" android:layout_marginStart="16dp"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/pillName"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large" android:text="Pill Name"
                    app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="3dp"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
                    android:layout_marginBottom="5dp" app:layout_constraintBottom_toTopOf="@+id/pillInfo"/>
            <TextView
                    android:text="Pill Total"
                    android:layout_width="99dp"
                    android:layout_height="18dp"
                    android:id="@+id/pillTotal"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                    app:layout_constraintStart_toEndOf="@+id/pillName" android:layout_marginStart="16dp"
                    android:layout_marginBottom="14dp" app:layout_constraintBottom_toTopOf="@+id/pillInfo"
                    android:layout_marginTop="3dp" app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/dispenseButton" android:layout_marginEnd="153dp"
                    app:layout_constraintHorizontal_bias="0.0" app:layout_constraintVertical_bias="0.0"/>
            <Button
                    android:text="Dispense"
                    android:layout_width="wrap_content"
                    android:layout_height="136dp"
                    android:id="@+id/dispenseButton"
                    app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="3dp"
                    android:layout_marginStart="3dp" app:layout_constraintStart_toEndOf="@+id/pillInfo"
                    app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="5dp"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="5dp" android:textSize="12sp"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>